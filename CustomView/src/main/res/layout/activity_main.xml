<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hb.customview.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_bg="@android:color/holo_orange_dark"
        app:title_text="@string/app_name"
        app:title_text_color="@android:color/holo_blue_dark" />

    <com.hb.customview.HorizontalView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ListView
            android:id="@+id/lv_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ListView
            android:id="@+id/lv_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.hb.customview.HorizontalView>

    <com.hb.customview.InvalidTextView
        android:id="@+id/iv_text"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="16sp" />

    <com.hb.customview.RectView
        android:id="@+id/rv_rect1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <com.hb.customview.RectView
        android:id="@+id/rv_rect2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:padding="20dp" />

    <com.hb.customview.RectView
        android:id="@+id/rv_rect3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:rect_color="@android:color/holo_blue_light" />

</LinearLayout>